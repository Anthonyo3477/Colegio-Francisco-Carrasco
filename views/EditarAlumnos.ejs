<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>
        <%= title || 'Actualizar Alumno' %>
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/css/EditarAlumnos.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
</head>

<body>

    <!-- Navbar -->
    <%- include('partials/navbar') %>

    <main class="container my-5">
        <div class="card shadow-lg border-0">
            <div class="card-header bg-brown text-center">
                <h2 class="mb-0 text-brown">
                    <i class="bi bi-pencil-fill me-2"></i>Editar Alumno
                </h2>
            </div>
            <div class="card-body">
                <% if (error) { %>
                    <div class="alert alert-danger" role="alert">
                        <%= error %>
                    </div>
                    <% } %>

                        <form action="/actualizar/<%= alumno.id %>" method="POST">
                            <div class="col-12">
                                <label class="form-label">Rut:</label>
                                <input type="text" class="form-control" name="rut_alumnos" value="<%= alumno.rut_alumnos %>" required readonly>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Nombre:</label>
                                <input type="text" class="form-control" name="nombre" value="<%= alumno.nombre %>" required>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Apellido Paterno:</label>
                                <input type="text" class="form-control" name="apellido_paterno" value="<%= alumno.apellido_paterno %>" required>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Apellido Materno:</label>
                                <input type="text" class="form-control" name="apellido_materno" value="<%= alumno.apellido_materno %>">
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Curso:</label>
                                <input type="text" class="form-control" name="curso" value="<%= alumno.curso %>" required>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Fecha de Ingreso:</label>
                                <input type="date" class="form-control" name="fecha_ingreso" value="<%= alumno.fecha_ingreso %>">
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Nacionalidad:</label>
                                <input type="text" class="form-control" name="nacionalidad" value="<%= alumno.nacionalidad %>">
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Orden de llegada:</label>
                                <input type="text" class="form-control" name="orden_llegada" value="<%= alumno.orden_llegada %>">
                            </div>

                            <div class="col-12">
                                <button type="submit" class="btn btn-primary">Actualizar</button>
                                <a href="/alumnos" class="btn btn-secondary" style="margin-left: 10px;">Cancelar</a>
                            </div>
                        </form>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <%- include('partials/footer') %>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>